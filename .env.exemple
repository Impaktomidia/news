# .env.example
# Configurações do Banco de Dados
DB_HOST=ipk2024.mysql.uhserver.com
DB_NAME=ipk2024
DB_USER=ipk
DB_PASS=Ipk@12647

# Configurações da Aplicação
APP_NAME="Sistema de Gestão de Pontos"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://impaktomidia.com.br
APP_TIMEZONE=America/Recife

# Chave de criptografia (gerar nova para produção)
APP_KEY=base64:generated-key-here

# Configurações de Sessão
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_HTTP_ONLY=true
SESSION_SECURE=true

# Configurações de Cache
CACHE_DRIVER=file
CACHE_TTL=3600

# Configurações de Log
LOG_LEVEL=info
LOG_CHANNEL=daily
LOG_MAX_FILES=14

# Configurações de Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
UPLOAD_PATH=/storage/uploads

# Configurações de Email (para futuras funcionalidades)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@impaktomidia.com.br
MAIL_FROM_NAME="${APP_NAME}"

# Configurações de API (para integrações futuras)
API_RATE_LIMIT=1000
API_RATE_LIMIT_PERIOD=3600

# Configurações de Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30